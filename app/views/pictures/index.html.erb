<h4>投稿一覧</h4>

<div class="container">
  <table class="table">
    <tr>
      <th>タイトル</th>
      <th>内容</th>
    </tr>
    <% @pictures.each do |picture| %>   
    <tr> 
      <td><%= picture.title %></td><br>
      <td><%= picture.content %></td><br>
      <td><%= link_to '詳細', picture_path(picture.id) %></td>
      <td><%= link_to "編集", edit_picture_path(picture.id), data: { confirm: '本当に編集していいですか？' } %></td>
      <td><%= link_to '削除', picture_path(picture.id), method: :delete, data: { confirm: '本当に削除していいですか？' } %></td><br>
    </tr>
    <% end %>
  </table>
</div>
<br>
<%= link_to '新しく投稿する', new_picture_path, class: 'btn btn-default' %>