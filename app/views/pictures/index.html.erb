<h2>投稿一覧</h2>

<p><%= notice %></p>
  
  <% @pictures.each do |picture| %>
    
    <div class="balloon1-left">
      <%= picture.content %><br>
    </div><br>
      <%= link_to '詳細', picture_path(picture.id) %>
      <%= link_to "編集", edit_picture_path(picture.id), data: { confirm: '本当に編集していいですか？' } %>
      <%= link_to '削除', picture_path(picture.id), method: :delete, data: { confirm: '本当に削除していいですか？' } %><br>
  <% end %>
<br>
<%= link_to '新しく投稿する', new_picture_path %>